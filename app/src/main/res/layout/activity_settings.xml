<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/backgrounds"
android:paddingHorizontal="@dimen/margin_small"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/padding_small">
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="@dimen/btn_large"
        android:layout_height="@dimen/btn_large"
        android:background="@android:color/transparent"
        android:src="@drawable/back_ic"
        app:tint="@color/text"
        android:layout_marginStart="@dimen/padding_small" />
    <TextView
        style="@style/HeaderText"
        android:layout_marginStart="@dimen/margin_small"
        android:text="@string/options" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_height"
    android:layout_marginTop="@dimen/btn_medium"
    android:layout_marginStart="@dimen/padding_small"
    android:gravity="center_vertical">
    <TextView
        style="@style/OptionText"
        android:text="@string/is_dark_theme"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

<!-- Повторяющиеся блоки -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_height"
    android:layout_marginStart="@dimen/padding_small"
    android:gravity="center_vertical">
    <TextView
        style="@style/OptionText"
        android:text="@string/share"/>
    <ImageButton
        android:id="@+id/shareButton"
        style="@style/OptionIconButton"
        android:src="@drawable/share_ic"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_height"
    android:layout_marginStart="@dimen/padding_small"
    android:gravity="center_vertical">
    <TextView
        style="@style/OptionText"
        android:text="@string/message_sup"/>
    <ImageButton
        android:id="@+id/supportButton"
        style="@style/OptionIconButton"
        android:src="@drawable/support_ic"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_height"
    android:layout_marginStart="@dimen/padding_small"
    android:gravity="center_vertical">
    <TextView
        style="@style/OptionText"
        android:text="@string/agreement"/>
    <ImageButton
        android:id="@+id/agreementButton"
        style="@style/OptionIconButton"
        android:src="@drawable/agreement_ic"/>
</LinearLayout>
</LinearLayout>