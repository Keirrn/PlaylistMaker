<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/icon_song"
        android:layout_height="@dimen/icon_song"
        android:layout_marginStart="13dp"
        android:layout_marginVertical="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/titleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/text"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/cover"
        app:layout_constraintEnd_toStartOf="@id/moreBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_14"/>

    <TextView
        android:id="@+id/artistView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_micro"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/singer"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/titleView"
        app:layout_constraintTop_toBottomOf="@id/titleView" />

    <TextView
        android:id="@+id/timeView"
        android:drawableStart="@drawable/ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_micro"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/singer"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/artistView"
        app:layout_constraintBaseline_toBaselineOf="@id/artistView"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/agreement_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_small"/>
</androidx.constraintlayout.widget.ConstraintLayout>