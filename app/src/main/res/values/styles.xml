<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="OptionText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_width">@dimen/width_zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="OptionIconButton">
        <item name="android:layout_width">@dimen/btn_medium</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tint">@color/items</item>
    </style>


    <style name="MainButton">
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/width_zero</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/margin_default</item>
        <item name="iconPadding">@dimen/margin_icon_padding</item>
    </style>

</resources>