<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextAudioPlayer" parent="HeaderText">
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_audio_player</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="GrayTextPlayer" parent="TextAudioPlayer">
        <item name="android:textColor">@color/text_gray</item>
        <item name="layout_constraintStart_toEndOf">@id/leftBorder</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>

    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextColor">@color/text</item>
        <item name="titleTextAppearance">@style/HeaderText</item>
        <item name="contentInsetStart">@dimen/margin_default</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="SettingsItemText">
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_small</item>
        <item name="android:paddingVertical">@dimen/padding_settings_item</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="PlaceholderText" parent="SectionTitle">
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>
    <style name="TabText" parent="SectionTitle">
        <item name="android:textSize">@dimen/text_button_small</item>
    </style>
    <style name="Button">
        <item name="cornerRadius">54dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_button_small</item>
        <item name="android:textColor">@color/backgrounds</item>
        <item name="android:backgroundTint">@color/text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/width_zero</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/margin_default</item>
        <item name="iconPadding">@dimen/margin_icon_padding</item>
    </style>

    <style name="SimpleImageBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">"#00000000"</item>
    </style>

</resources>
